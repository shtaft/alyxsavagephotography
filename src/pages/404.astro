---
import FadeIn from "../components/animation/FadeIn.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Alyx Savage | Victoria & Vancouver Island Photography"
  inverted={true}
>
  <main>
    <FadeIn>
      <div
        class="flex flex-col justify-center items-center h-[100vh] uppercase tracking-widest relative overflow-hidden"
      >
        <div class="absolute z-10">
          <div
            class="max-w-md flex flex-col justify-center items-center text-center"
          >
            <h1 class="text-4xl md:text-5xl lg:text-6xl text-beige text-center">
              Not Found
            </h1>
            <p class="text-md md:text-lg mt-6 text-beige text-center">
              Sorry, the page you are looking for does not exist.
            </p>
          </div>
          <div class="py-24 flex justify-center items-center">
            <a
              href="/"
              class="bg-beige rounded-lg px-12 py-6 text-charcoal uppercase transition-colors duration-500 hover:bg-charcoal hover:text-beige tracking-widest max-w-screen-sm"
            >
              Go Home</a
            >
          </div>
        </div>
        <img
          class="brightness-50 h-screen w-screen object-cover"
          src="/img/my-work.jpg"
        />
      </div>
    </FadeIn>
  </main>
</Layout>
