---
import FadeIn from "../components/animation/FadeIn.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact | Alyx Savage Photography">
  <main>
    <div class="my-48">
      <FadeIn>
        <div class="flex flex-col items-center uppercase tracking-widest my-24">
          <h1 class="text-5xl md:text-7xl">Contact Me</h1>
        </div>

        <form class="max-w-screen-sm mx-auto space-y-6 px-3">
          <div class="space-y-2 text-lg">
            <label for="name">Name</label>
            <input
              class="w-full py-3 px-3 outline-beige tracking-widest bg-beige border border-charcoal rounded-lg"
              type="text"
              name="name"
              id="name"
            />
          </div>
          <div class="space-y-2 text-lg">
            <label for="email">Email</label>
            <input
              class="w-full py-3 px-3 outline-beige tracking-widest bg-beige border border-charcoal rounded-lg"
              type="email"
              name="email"
              id="email"
            />
          </div>
          <div class="space-y-2 text-lg">
            <label for="message">Message</label>
            <textarea
              class="w-full py-3 px-3 outline-beige tracking-widest bg-beige border border-charcoal rounded-lg"
              name="message"
              id="message"
              cols="30"
              rows="10"></textarea>
          </div>
          <div class="flex flex-col items-end">
            <button
              type="submit"
              class="bg-charcoal tracking-widest rounded-lg my-6 px-24 text-center py-6 text-beige uppercase transition-colors duration-500 hover:bg-beige hover:text-charcoal border border-charcoal outline-beige"
            >
              Submit
            </button>
          </div>
        </form>
      </FadeIn>
    </div>
  </main>
</Layout>
