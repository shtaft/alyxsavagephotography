---
import HoverLink from "../components/animation/HoverLink.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props;

const navContent = [
  {
    title: "Projects",
    href: "/projects",
  },
  {
    title: "About",
    href: "/about",
  },
  {
    title: "Contact",
    href: "/contact",
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-beige text-charcoal">
    <nav class="z-10 absolute top-0 w-screen px-3 md:px-6">
      <div
        class="max-w-screen-2xl mx-auto py-6 flex flex-row justify-between items-center"
      >
        <a href="/" class="uppercase text-3xl outline-beige">A.S.</a>
        <div class="flex flex-row justify-end">
          {
            navContent.map(({ title, href }) => (
              <div class="uppercase text-md lg:text-lg">
                <HoverLink href={href}>{title}</HoverLink>
              </div>
            ))
          }
        </div>
      </div>
    </nav>
    <div class="min-h-screen mt-24">
      <slot />
    </div>

    <div class="bg-charcoal text-beige pt-24 pb-12 px-12">
      <div
        class="grid grid-cols-1 md:grid-cols-3 2xl:grid-cols-[400px_1fr_1fr] space-y-12 md:space-y-0"
      >
        <span
          class="text-4xl uppercase flex justify-center md:justify-start md:border-r md:border-r-beige"
          >A.S.</span
        >
        <div class="flex flex-col items-center md:items-start md:mx-12">
          {
            navContent.map(({ title, href }) => (
              <a
                class="uppercase text-sm md:text-md my-1 hover:text-white outline-beige transition-colors tracking-widest"
                href={href}
              >
                {title}
              </a>
            ))
          }
        </div>
        <div class="flex flex-col items-end justify-center">
          <a
            href="/contact"
            class="bg-beige outline-beige rounded-lg py-6 w-full lg:max-w-sm text-center text-charcoal uppercase transition-colors duration-500 hover:bg-charcoal hover:text-beige border border-beige tracking-widest"
          >
            Work With Me</a
          >
        </div>
      </div>
      <div>
        <p class="text-xs mt-24 tracking-wider text-beige">
          Â© 2023 Alyx Savage Photography. All rights reserved.
        </p>
      </div>
    </div>
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Gloock&family=Libre+Baskerville&display=swap");
</style>
