---
import Section from "./Section.astro";

export interface Props {
  title: string;
  cta: string;
}

const { title, cta } = Astro.props as Props;
---

<Section>
  <div class="flex flex-col justify-center text-center space-y-12 px-6">
    <h2
      class="text-center text-5xl lg:text-8xl 2xl:text-9xl text-charcoal uppercase max-w-screen-lg mx-auto"
    >
      {title}
    </h2>
    <p class="text-charcoal text-lg lg:text-2xl max-w-screen-lg mx-auto">
      I love to work with individuals and brands to create content that allows
      them to be represented authentically. I value collaboration and connection
      and know that photography can play an important role in presenting your
      ideas.
      <br /><br />
      Let's work together to elevate your online presence.
    </p>
    <div class="flex flex-row items-center justify-center">
      <a
        href="/contact"
        class="bg-beige rounded-lg px-12 py-6 text-charcoal uppercase transition-colors duration-500 hover:bg-charcoal hover:text-beige border border-charcoal tracking-widest w-full max-w-screen-sm"
      >
        {cta}</a
      >
    </div>
  </div>
</Section>
